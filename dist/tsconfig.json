{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "incremental": true,
        "removeComments": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "./**/*",
        "./**/**/*.json"
    ]
}
